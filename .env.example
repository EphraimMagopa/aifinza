# Aifinza Environment Variables
# Copy this file to .env.local and fill in the values

# ===========================================
# APP
# ===========================================
NEXT_PUBLIC_APP_NAME="Aifinza"
NEXT_PUBLIC_APP_URL="http://localhost:3694"

# ===========================================
# DATABASE
# ===========================================
# For Docker: postgresql://postgres:postgres@db:5432/aifinza
# For local:  postgresql://postgres:postgres@localhost:5432/aifinza
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/aifinza"

# ===========================================
# REDIS (for rate limiting and caching)
# ===========================================
# For Docker: redis://redis:6379
# For local:  redis://localhost:6379
REDIS_URL="redis://localhost:6379"

# ===========================================
# AUTHENTICATION (NextAuth.js)
# ===========================================
NEXTAUTH_URL="http://localhost:3694"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# ===========================================
# AI PROVIDERS
# ===========================================
AI_DEFAULT_PROVIDER="claude"

# OpenAI
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4-turbo-preview"

# Anthropic (Claude)
ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL="claude-sonnet-4-20250514"

# Google AI (Gemini)
GOOGLE_AI_API_KEY=""
GOOGLE_AI_MODEL="gemini-pro"

# DeepSeek (uses OpenAI-compatible API)
DEEPSEEK_API_KEY=""
DEEPSEEK_MODEL="deepseek-chat"
DEEPSEEK_BASE_URL="https://api.deepseek.com/v1"

# ===========================================
# EMAIL (Forwardemail.net or similar SMTP)
# ===========================================
EMAIL_SERVER_HOST="smtp.forwardemail.net"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM="noreply@aifinza.co.za"

# ===========================================
# STRIPE PAYMENTS
# ===========================================
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Subscription Price IDs
STRIPE_STARTER_PRICE_ID=""
STRIPE_PROFESSIONAL_PRICE_ID=""
STRIPE_ENTERPRISE_PRICE_ID=""

# ===========================================
# FILE STORAGE (Uploadthing)
# ===========================================
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# ===========================================
# ERROR TRACKING (GlitchTip)
# ===========================================
GLITCHTIP_DSN=""

# ===========================================
# BACKGROUND JOBS (Upstash QStash)
# ===========================================
QSTASH_URL=""
QSTASH_TOKEN=""
QSTASH_CURRENT_SIGNING_KEY=""
QSTASH_NEXT_SIGNING_KEY=""

# ===========================================
# RATE LIMITING (Upstash Redis)
# For self-hosted, use local Redis instead
# ===========================================
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Rate limit settings
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="60"

# ===========================================
# ANALYTICS
# ===========================================
# Vercel Analytics (automatically enabled on Vercel)
# NEXT_PUBLIC_ANALYTICS_ID=""
